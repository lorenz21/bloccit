<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head.ejs') -%>
  </head>
  <body>
    <%- include('../partials/navbar.ejs') -%>

    <main class="container">
      <%- include('../partials/messages.ejs') -%>
      <h1>Edit Topic</h1>
      <form action="/topics/<%= topic.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Topic title</label>
          <input value="<%= topic.title %>" type="text" class="form-control bg-dark text-light" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
          <small class="text-muted" id="titleHelp">title must be 5 or more characters in length.</small>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea rows="4" class="form-control bg-dark text-light" name="description" placeholder="Enter Description"><%= topic.description %></textarea>
          <small class="text-muted" id="descriptionHelp">description must be 10 or more characters in length.</small>
        </div>
        <button type="submit" class="btn btn-dark">Update</button>
      </form>
    </main>

    <%- include('../partials/baseScripts.ejs') -%>

  </body>
</html>